#!/bin/sh

export VISUAL=nvim
export EDITOR=nvim
alias e="$EDITOR"
alias vim="$EDITOR"
alias vi="$EDITOR"

alias c='clear'

if command -v hub > /dev/null; then
  alias g='hub'
else
  alias g='git'
fi

alias d='docker'
alias dc='docker-compose'
alias k='kubectl'
alias tf='terraform'

# Coreutils overridden
alias l='ls -1A'             # Show files in one column.
alias ll='ls -lh'            # Show human readable.
alias la='ls -lhA'           # Show hidden files.
alias lx='ls -lhXB'          # Sort by extension.
alias lk='ls -lhSr'          # Sort by size, biggest last.
alias lc='ls -lhtcr'         # Sort by and show change time, most recent last.
alias lu='ls -lhtur'         # Sort by and show access time, most recent last.
alias lt='ls -lhtr'          # Sort by date, most recent last.
alias lm='ls -lha | more'    # Pipe through 'more'.
alias lr='ls -lhR'           # Recursive ls.
alias sl='ls'                # I often screw this up.
alias la='ls -A'
alias ll='ls -l'

alias grep='() { $(whence -p grep) --color=auto $@ }'

alias t='tmuxinator'
alias tk='tmuxinator stop'
alias ts='tmuxinator start'
alias te='tmuxinator edit'
alias tn='tmuxinator edit'


# Clone
# git clone --separate-git-dir=$HOME/.jdot git@github.com:JamesApple/.jdot.git  $HOME/.jdot-tmp
# rm -rf ~/.jdot-tmp/

# Brand new
# jdot init --bare $HOME/.jdots
# jdot config status.showUntrackedFiles no
alias jdot='/usr/bin/git --git-dir=$HOME/.jdot --work-tree=$HOME'

if [ -n "$ZSH_VERSION" ]; then
  alias -g X='| xargs'
  alias -g X%='| xargs -I %'
  alias -g G='| rg '
fi

