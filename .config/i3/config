# https://i3wm.org/docs/userguide.html
set $alt Mod1
set $meta Mod4

set $font pango:Fira Code 10

set $workspace1 Main
set $workspace2 Secondary
set $workspace3 Tertiary
set $workspace4 4
set $workspace5 5 
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9
set $workspace10 10


##
# Floating
#
# floating_modifier $meta
bindsym $meta+Shift+f floating toggle; sticky toggle; exec --no-startup-id hover left
bindsym $meta+Shift+s sticky toggle


##
# Bar
##
bar {
  position bottom
    status_command i3blocks
    mode dock
    modifier None
    font $font
}


##
# Navigation
#
bindsym $meta+h focus left
bindsym $meta+j focus down
bindsym $meta+k focus up
bindsym $meta+l focus right


##
# Rearrangement
#
bindsym $meta+s split toggle

bindsym $meta+Shift+h move left
bindsym $meta+Shift+j move down
bindsym $meta+Shift+k move up
bindsym $meta+Shift+l move right


##
# Commands
#
bindsym $meta+q kill

# Reload the configuration file
bindsym $meta+Shift+c reload 

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $meta+Shift+r restart 

bindsym $meta+BackSpace exec espeak 'Locked' & i3lock -t -i ~/.lockscreen.png
bindsym $meta+Shift+BackSpace exec espeak 'Logout' && i3-msg exit


##
# Applications
#
bindsym $meta+p exec ~/.local/tools/rofing
bindsym $meta+Shift+p exec ~/.local/tools/rofing Picker

bindsym $meta+Return exec --no-startup-id ~/.local/bin/i3/kittyhere


##
# Workspaces
# 
bindsym $meta+1 workspace $workspace1
bindsym $meta+2 workspace $workspace2
bindsym $meta+3 workspace $workspace3
bindsym $meta+4 workspace $workspace4
bindsym $meta+5 workspace $workspace5
bindsym $meta+6 workspace $workspace6
bindsym $meta+7 workspace $workspace7
bindsym $meta+8 workspace $workspace8
bindsym $meta+9 workspace $workspace9
bindsym $meta+0 workspace $workspace10

bindsym $meta+Shift+1 move container to workspace $workspace1
bindsym $meta+Shift+2 move container to workspace $workspace2
bindsym $meta+Shift+3 move container to workspace $workspace3
bindsym $meta+Shift+4 move container to workspace $workspace4
bindsym $meta+Shift+5 move container to workspace $workspace5
bindsym $meta+Shift+6 move container to workspace $workspace6
bindsym $meta+Shift+7 move container to workspace $workspace7
bindsym $meta+Shift+8 move container to workspace $workspace8
bindsym $meta+Shift+9 move container to workspace $workspace9
bindsym $meta+Shift+0 move container to workspace $workspace10

##
# Resizing
#
bindsym $meta+f fullscreen toggle
bindsym $meta+r mode "resize"
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $meta+r mode "default"
}

##
# Misc
#
font $font
for_window [class="^.*"] border pixel 2

exec --no-startup-id sleep 15; cat ./.xinitrc | sh
exec --no-startup-id compton
